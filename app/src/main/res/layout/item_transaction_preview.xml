<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_tiny"
    android:layout_marginVertical="@dimen/spacing_tiny"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <!-- SMS Content -->
        <TextView
            android:id="@+id/sms_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS content here"
            android:textSize="@dimen/text_size_body_medium"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="monospace"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/spacing_small" />

        <!-- Transaction Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Amount -->
            <TextView
                android:id="@+id/transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹500"
                android:textSize="@dimen/text_size_body_large"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <!-- Merchant -->
            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Merchant"
                android:textSize="@dimen/text_size_body_medium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginHorizontal="@dimen/spacing_small"
                android:gravity="center" />

            <!-- Date -->
            <TextView
                android:id="@+id/transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 15"
                android:textSize="@dimen/text_size_body_small"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>