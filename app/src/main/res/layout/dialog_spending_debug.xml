<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly Spending Breakdown"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />
    
    <TextView
        android:id="@+id/date_range_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date range"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="16dp" />

    <!-- Income Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’° Total Income (Credits)"
                android:textSize="16sp"
                android:textColor="@color/transaction_income" />

            <TextView
                android:id="@+id/total_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+â‚¹0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/transaction_income" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Expense Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’¸ Total Expenses (Debits)"
                android:textSize="16sp"
                android:textColor="@color/transaction_expense" />

            <TextView
                android:id="@+id/total_debits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-â‚¹0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/transaction_expense" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="?attr/colorOutline" />

    <!-- Net Amount Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/net_amount_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“Š Net Amount (Income - Expenses)"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/net_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0.00"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Transaction Counts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/credit_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 credit transactions"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/debit_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 debit transactions"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <!-- Dashboard Display Info -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard shows:"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/dashboard_display_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This amount in RED (negative)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Warning Section -->
    <TextView
        android:id="@+id/warning_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="?attr/colorError"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="?attr/colorErrorContainer" />

    <!-- Close Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        style="@style/Widget.Material3.Button.TonalButton" />

</LinearLayout>