<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- SMS Permissions for reading and receiving transaction messages -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <!-- Notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Telephony hardware feature (optional for ChromeOS compatibility) -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <!-- Internet permission for downloading AI model -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Biometric permission for app lock feature -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Explicitly remove AD_ID permission to ensure privacy -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" tools:node="remove" />

    <application
        android:name=".PennyWiseApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pennywisecompose">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PennyWise.SplashScreen"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Disable default WorkManager initialization -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>
        
        <!-- FileProvider for CSV export -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- SMS BroadcastReceiver for real-time transaction processing -->
        <receiver
            android:name=".receiver.SmsBroadcastReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- Notification Action Receiver for handling notification button actions -->
        <receiver
            android:name=".receiver.NotificationActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.pennywiseai.tracker.ACTION_DELETE_TRANSACTION" />
                <action android:name="com.pennywiseai.tracker.ACTION_CONFIRM_TRANSACTION" />
            </intent-filter>
        </receiver>

        <!-- Budget Widget -->
        <receiver
            android:name=".widget.BudgetWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_name_budget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/budget_widget_info" />
        </receiver>

        <!-- Recent Transactions Widget -->
        <receiver
            android:name=".widget.RecentTransactionsWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_name_recent">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recent_transactions_widget_info" />
        </receiver>
    </application>

</manifest>
